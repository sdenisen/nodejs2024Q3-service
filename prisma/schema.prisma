generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @unique
  login     String
  password  String
  version   Int
  createdAt Int
  updatedAt Int
}

model Artist {
  id     String  @unique
  name   String
  grammy Boolean
}

model Track {
  id       String  @unique
  name     String
  artistId String?
  albumId  String?
  duration Int
}

model Album {
  id       String  @unique
  name     String
  year     Int
  artistId String?
}

model Favorites {
  id      Int      @id @default(0)
  artists String[]
  albums  String[]
  tracks  String[]
}
